<VirtualHost *:80>
    ServerName tudominio.com
    ServerAlias www.tudominio.com
    DocumentRoot /var/www/martinezdevice/public

    <Directory /var/www/martinezdevice/public>
        Options -Indexes +FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    # Configuración para archivos grandes (uploads)
    LimitRequestBody 20971520

    ErrorLog ${APACHE_LOG_DIR}/martinezdevice_error.log
    CustomLog ${APACHE_LOG_DIR}/martinezdevice_access.log combined
</VirtualHost>

